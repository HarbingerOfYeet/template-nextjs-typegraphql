{
  "name": "backend",
  "version": "0.1.0",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "clean": "rm -r ./dist",
    "dev": "cross-env NODE_ENV=development node-dev --loader ./loader.js --respawn --no-notify ./src/app.ts",
    "prod": "node ./dist/src/app.js",
    "test": "dotenv -e .env.test -- ts-mocha",
    "generate:prisma": "cross-env NODE_OPTIONS=--max-old-space-size=4096 prisma generate",
    "generate:schema": "node --loader ./loader.js ./src/schema.ts",
    "db:migrate": "cross-env NODE_OPTIONS=--max-old-space-size=4096 prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:migrate:save": "prisma migrate dev --create-only"
  },
  "resolutions": {
    "postcss": "^8.3.31"
  },
  "dependencies": {
    "@apollo/server": "^4.7.5",
    "@prisma/client": "4.16.2",
    "@types/chai": "^4.3.5",
    "body-parser": "^1.20.2",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-depth-limit": "^1.1.0",
    "graphql-fields": "^2.0.3",
    "graphql-middleware": "^6.1.35",
    "graphql-scalars": "^1.22.2",
    "graphql-shield": "^7.6.5",
    "graphql-tag": "^2.12.6",
    "prisma": "^4.16.2",
    "reflect-metadata": "^0.1.13",
    "resolve": "^1.22.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "type-graphql": "^2.0.0-beta.2",
    "vite": "^4.4.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/graphql-fields": "^1.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.1",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^4.1.1",
    "graphql-request": "^6.1.0",
    "mocha": "^10.2.0",
    "node-dev": "^8.0.0",
    "testdouble": "^3.18.0",
    "testdouble-chai": "^0.5.0",
    "ts-mocha": "^10.0.0",
    "tsc-alias": "^1.8.7",
    "tslib": "^2.6.0",
    "tsx": "^3.12.7",
    "typegraphql-prisma": "^0.26.0",
    "typescript": "^5.1.6"
  }
}
